[paths]
source = clu

[run]
omit =
    clu/__version__.py
    clu/scripts/forkumask.py
    clu/scripts/xdg-runtime.py
    clu/testing/hook.py
    clu/testing/obsolete.py

# dynamic_context = test_function

source = clu
branch = True
cover_pylib = True
parallel = False

[report]
omit =
    clu/__version__.py
    clu/scripts/forkumask.py
    clu/scripts/xdg-runtime.py
    clu/testing/hook.py
    clu/testing/obsolete.py

show_missing = False
ignore_errors = True
precision = 2

exclude_lines =
    pragma: no cover
    if DEBUG
    if verbose
    def __reduce__
    except TypeError:
    raise NotImplementedError
    \.\.\.

[html]
directory = "coverage_html"

[xml]
output = "coverage.xml"

[json]
output = "coverage.json"
pretty_print = true